<%= form_for(@product, :html => {:class => "well form-inline"} ) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.label 'I want to' %>
    <%= select(:wanted_action, :id, [['Borrow', 1],['Share', 2],['Buy', 3]]) %>
    <div class="input-append">
      <%= f.text_field :name, :size => 100, :class => "input-xxlarge", :placeholder => "I wanna..." %>
      <%= f.submit :class => "btn btn-success btn-medium", :value => "  Post  " %>
    </div>  
<% end %>
